<%= simple_form_for [@user, @engagement] do |f| %>
  <% if @engagement.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @engagement.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="subsection-title"><%= @engagement.project.title %></div>
    <div class="column is-3 is-offset-1">
      <% if user_signed_in? && current_user.id == @engagement.user_id %>
        <div class="bg-light pa3 mb4 border-radius-3">
          <p class="f6 pb1">Project status:</p>
          <div class="button-group">
            <%= f.select :dev_status, ['Approved (Not currently working on this project)', 'Current (Developing 4 Good!)', 'Task Completed (Project pushed to GitHub with detailed commit messages)'] %>
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <% if user_signed_in? && current_user.id == @engagement.project.user_id %>
        <%= f.select :status, ['Accepted', 'Rejected'] %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
