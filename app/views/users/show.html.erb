<div class="dashboard-container">

  <div class="dashboard">
    <header class="page-header">
      <h1 class="page-title-secondary">MY DASHBOARD</h1>
      <small><i class="fa fa-clock-o"></i> Last Updated on: <time>Sunday, June 05, 2019</time></small>
    </header>

    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading dashboard-heading bs-callout">
          <div class="row">
            <div class="col-lg-12">

              <div class="col-xs-12 col-sm-4">
                <figure>
                  <img class="img-circle img-responsive center-block" alt="" src="<%= @user.photo %>">
                </figure>
              </div>

              <div class="col-xs-12 col-sm-8">
                <ul class="list-group">
                  <li class="list-group-item"><%= @user.first_name %> <%= @user.last_name %></li>
                  <li class="list-group-item"><%= @user.job_title %></li>
                  <li class="list-group-item"><i class="fa fa-phone"></i> <%= @user.contact_number %></li>
                  <li class="list-group-item"><i class="fa fa-envelope"></i> <%= @user.email %></li>
                </ul>
              </div>

            </div>
          </div>
          <p></p>
          <div class="social">
            <a href="<%= @user.facebook %>" class="button facebook"><span><i class="fa fa-facebook"></i></span><p>Facebook</p></a>
            <a href="<%= @user.twitter %>" class="button twitter"><span><i class="fa fa-twitter"></i></span><p>Twitter</p></a>
            <a href="<%= @user.instagram %>" class="button instagram"><span><i class="fa fa-instagram"></i></span><p>Instagram</p></a>
            <a href="<%= @user.linkedin %>" class="button linkedin"><span><i class="fa fa-linkedin"></i></span><p>Linkedin</p></a>
            <a href="<%= @user.github %>" class="button github"><span><i class="fa fa-github"></i></span><p>Github</p></a>
          </div>

        </div>

        <div class="bs-callout bs-callout-danger">
          <h4>About me</h4>
          <p class="list-group-item"><%= @user.bio %></p>
        </div>

        <div class="bs-callout bs-callout-danger">
          <h4>Project Interests</h4>
          <p class="list-group-item"><%= @user.interests %></p>
        </div>

        <div class="bs-callout bs-callout-danger">
          <h4>Prior Experiences</h4>
          <ul class="list-group">
            <p class="list-group-item"><%= @user.experience %></p>
          </ul>
        </div>

        <div class="bs-callout bs-callout-danger">
          <h4>Current Project</h4>
          <ul class="list-group">
            <li class="list-group-item">NEED TO CODE user.current_projects?</li>
          </ul>
          <h4 class="mt-4">Past Projects</h4>
          <ul class="list-group">
            <li class="list-group-item">NEED TO CODE user.past_projects?</li>
          </ul>
          <h4 class="mt-4">Pending Project</h4>
          <ul class="list-group">
            <li class="list-group-item">NEED TO CODE user.pending_projects?s</li>
          </ul>
        </div>

        <div class="bs-callout bs-callout-danger">
          <h4>Language and Platform Skills</h4>
          <p class="list-group-item"><%= @user.skills %></p>
          <ul class="list-group">
            <a class="list-group-item inactive-link" href="#">

              <div class="progress">
                <div data-placement="top" style="width: 80%;"
                aria-valuemax="100" aria-valuemin="0" aria-valuenow="80" role="progressbar" class="progress-bar progress-bar-success">
                  <span class="sr-only">80%</span>
                  <span class="progress-type">Ruby/ Rails Framework </span>
                </div>
              </div>

              <div class="progress">
                <div data-placement="top" style="width: 100%;" aria-valuemax="100" aria-valuemin="0" aria-valuenow="1" role="progressbar" class="progress-bar progress-bar-success">
                  <span class="sr-only">70%</span>
                  <span class="progress-type">Violin</span>
                </div>
              </div>

              <div class="progress">
                <div data-placement="top" style="width: 70%;" aria-valuemax="100" aria-valuemin="0" aria-valuenow="1" role="progressbar" class="progress-bar progress-bar-success">
                  <span class="sr-only">70%</span>
                  <span class="progress-type">JavaScript/ NodeJS/ React</span>
                </div>
              </div>

              <div class="progress">
                <div data-placement="top" style="width: 40%;" aria-valuemax="100" aria-valuemin="0" aria-valuenow="1" role="progressbar" class="progress-bar progress-bar-warning">
                  <span class="sr-only">65%</span>
                  <span class="progress-type">Python</span>
                </div>
              </div>

              <div class="progress-meter">
                <div style="width: 25%;" class="meter meter-left"><span class="meter-text">I suck</span></div>
                <div style="width: 25%;" class="meter meter-left"><span class="meter-text">I know little</span></div>
                <div style="width: 30%;" class="meter meter-right"><span class="meter-text">I'm a guru</span></div>
                <div style="width: 20%;" class="meter meter-right"><span class="meter-text">I''m good</span></div>
              </div>

            </a>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
