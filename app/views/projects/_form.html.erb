<%= simple_form_for  [@organization, @project] do |f| %>
  <% if @project.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.association :organization, collection: Organization.where.not(id: 1), input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
