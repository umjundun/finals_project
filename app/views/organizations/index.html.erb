<!-- Requires special container because of map -->
<div class="orgs-index-container">
  <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="orgs-panel">
    <h3>Find an organization near you!</h3>
      <div class="org-cards">
        <% @organizations.each do |organization| %>
          <%= link_to organization_path(organization) do %>
            <%= render 'shared/cards/org_card', organization: organization %>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
