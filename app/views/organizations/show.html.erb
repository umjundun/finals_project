<div class="major-container">
  <%= render 'shared/menus/side_menu' %>
  <div class="major-navigation">
    <div class="nav-content-container">
      <div class="nav-title"><%= @organization.name %></div>
      <div class="major-subtitle">OUR MISSION:</div>
      <div class="nav-text"><%= @organization.mission %></div>
    </div>
  </div>
  <div class="major-white-panel">
    <div class="major-card">
      <div class="major-card-content">
        <div class="major-card-content-box">
          <div class="major-subtitle">CURRENT PROJECTS</div>
          <div class="cards-project" >
            <% @projects.each do |project| %>
              <%= render 'shared/cards/project_card', project: project %>
            <% end %>
          </div>
        </div>
        <div class="major-card-content-box">
          <div class="major-subtitle">PAST PROJECTS</div>
          <p>empty for now</p>
        </div>
      </div>
      <div class="major-right-side-bar"></div>
    </div>
  </div>
</div>
