<div class="organization-banner">
  <h1><%= @organization.name %></h1>
  <h2><%= @organization.mission %></h2>
</div>

<div class="section-container">
  <div class="subsection-title">
    <% @card_num = @projects.count %>
    <%= @organization.name %> has <%= @card_num %> active projects:
  </div>

  <div class="cards-project" >
    <% @organization.projects.each do |project| %>
      <%= link_to project_path(project) do %>
        <div class="card-project">
          <img src="<%= project.organization.logo %>"/>
          <div class="card-project-infos">
            <h2><%= project.title %></h2>
            <p><strong><%= project.description %></strong></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="section-container">
  <div class="subsection-title">
    Meet <%= @organization.name %>:
  </div>

