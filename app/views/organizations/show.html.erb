<div class="organization-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <h1><%= @organization.name %></h1>
  <h2><%= @organization.mission %></h2>
</div>

<div class="container organization-container">

  <div class="subsection-title">
    <% @card_num = @projects.count %>
    <%= @organization.name %> has <%= @card_num %> active projects:
  </div>

  <div class="container d-flex justify-content-around my-5" >
    <div class="cards">
      <%= render 'shared/projectCards' %>
    </div>
  </div>

  <div class="subsection-title">
    Meet <%= @organization.name %>:
  </div>

  <div class="card-container organization-card-container">
    <% @representatives.each do |rep| %>
      <p>
        <%= rep %>
        <% if rep.primary %>
          <%= (Organizational focal point) %>
        <% end %>
      </p>
    <% end %>
  </div>

</div>
