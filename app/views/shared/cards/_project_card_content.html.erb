<div class="project-content">
  <div class="project-text">

    <p><span class="element-tag">Category: </span><%= project.category %></p>
    <p><span class="element-tag">Deadline: </span><%= project.deadline %> day(s)</p>

    <% if user_signed_in? %>

     
    <% if user_signed_in? && current_user.id != project.user_id %>
      <a href="#" class="teal-button" id="modal-projectApply-button" data-target='<%= project.id %>'>
        APPLY NOW
      </a>
      <%= render "shared/devise_partials/modal_project_apply", project: project, engagement: @engagement %>
    <% elsif user_signed_in? && current_user.id == project.user_id  %>
      <a href="#" class="teal-button" id="modal-projectEdit-button" data-target='<%= project.id %>'>
        EDIT
      </a>
      <%= render "shared/devise_partials/modal_project_edit", project: project %>
    <% else %>
    <% end %>

    <% end %>

  </div>


  </div>
