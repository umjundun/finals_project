
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top scrolling-navbar" id="navbar">
  <%= link_to root_path, class: "navbar-brand " do %>
    <%= image_tag "logo.png" %>
    <% end %>

<%= form_tag("/search", method: "get", class: "search-bar") do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find your next project"
      %>
      <%= submit_tag "Search", class: "search-button" %>
    <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <!-- Notifications -->
        <li class="nav-item dropdown">
          <div id="notifications">

          </div>
        </li>
        <!-- Hamburger nav button -->
        <li class="nav-item dropdown" id="hamburger-icon">
          <%= render 'shared/menus/hamburger' %>
        </li>
        <!-- User avator dropdown button -->
        <li class="nav-item dropdown">
          <%= render 'shared/menus/user_avatar' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


