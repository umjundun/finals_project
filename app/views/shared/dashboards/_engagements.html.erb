<div class="dash-content-card dash-engagement-type">
  <% if @user.my_active_engagements.empty? %>
    <div class="no-engagements general-text">You have no active engagements at this time.</div>
  <% else %>
    <% @user.my_active_engagements.order(updated_at: :desc).each do |engagement| %>
      <!-- A SINGLE ENGAGEMENT -->
      <%= render 'shared/cards/engagements/engage_card', engagement: engagement %>
    <% end %>
  <% end %>
</div>

